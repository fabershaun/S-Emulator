<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.mainApp.MainAppController">
    <BorderPane prefHeight="500" prefWidth="1100">
        <top>
            <BorderPane BorderPane.alignment="TOP_LEFT">
                <center>
                    <Label fx:id="titleLabel" alignment="CENTER" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-background-color: transparent; -fx-alignment: center; -fx-letter-spacing: 2px;" text="S-Emulator" textAlignment="CENTER" />
                </center>

                <right>
                    <HBox alignment="TOP_RIGHT" spacing="10">
                        <padding>
                            <Insets right="4" top="4"/>
                        </padding>
                        <Button onAction="#onCreateProgramClicked"
                                style="-fx-background-color: transparent; -fx-font-size: 12px; -fx-padding: 0;">
                            <graphic>
                                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                    <Image url="@/images/pencilIcon.jpg"/>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="settingsButton" onAction="#onSettingsClicked"
                                style="-fx-background-color: transparent; -fx-font-size: 12px; -fx-padding: 0;">
                            <graphic>
                                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                    <Image url="@/images/gearIcon.png"/>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>
                </right>

                <bottom>
                    <HBox>
                        <padding>
                            <Insets left="5.0"/>
                        </padding>
                        <fx:include fx:id="loadFile" source="../loadFile/loadFile.fxml"/>
                    </HBox>
                </bottom>
            <BorderPane.margin>
               <Insets bottom="5.0" />
            </BorderPane.margin>
            </BorderPane>
        </top>
      <center>
          <SplitPane dividerPositions="0.6557" BorderPane.alignment="CENTER">
              <SplitPane dividerPositions="0.5394736842105263" orientation="VERTICAL" prefWidth="586.0">
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="7.0">
                      <padding>
                          <Insets bottom="10.0" left="5.0" right="5.0" top="5.0"/>
                      </padding>
                      <fx:include fx:id="topToolBar" source="../topToolBar/topToolBar.fxml"
                                  BorderPane.alignment="TOP_LEFT"/>
                      <fx:include fx:id="mainInstructionsTable"
                                  source="../mainInstructionsTable/mainInstructionsTable.fxml"/>
                      <fx:include fx:id="summaryLine"
                                  source="../summaryLineOfMainInstructionsTable/summaryLine.fxml"/>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="7.0">
                      <padding>
                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                      </padding>
                      <fx:include fx:id="chainInstructionTable"
                                  source="../chainInstructionTable/chainInstructionTable.fxml"/>
                  </VBox>
              </SplitPane>
              <SplitPane dividerPositions="0.5190409026798307" minWidth="200.0" orientation="VERTICAL">
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="7.0">
                      <padding>
                          <Insets bottom="10.0" left="5.0" right="5.0" top="5.0"/>
                      </padding>
                      <fx:include fx:id="debuggerExecutionMenu"
                                  source="../debuggerExecutionMenu/debuggerExecutionMenu.fxml"/>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                      <padding>
                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                      </padding>
                      <fx:include fx:id="historyMenu" source="../history/history.fxml"/>
                  </VBox>
              </SplitPane>
          </SplitPane>
      </center>
      <padding>
         <Insets bottom="5.0" />
      </padding>
    </BorderPane>
</ScrollPane>
