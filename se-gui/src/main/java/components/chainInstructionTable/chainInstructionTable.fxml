<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<TableView fx:id="instructionsTable" maxHeight="1.7976931348623157E308" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.chainInstructionTable.ChainInstructionsTableController">
    <columns>
        <TableColumn fx:id="colIndex" prefWidth="50" style="-fx-alignment: CENTER;" text="#" />
        <TableColumn fx:id="colType" prefWidth="50" style="-fx-alignment: CENTER;" text="B\S" />
        <TableColumn fx:id="colLabel" prefWidth="60" style="-fx-alignment: CENTER;" text="Label" />
        <TableColumn fx:id="colInstruction" prefWidth="200" style="-fx-alignment: CENTER;" text="Instruction" />
        <TableColumn fx:id="colCycles" prefWidth="60" style="-fx-alignment: CENTER;" text="Cycles" />
    </columns>
    <placeholder>
        <Label text="No instruction selected" />
    </placeholder>
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
</TableView>
