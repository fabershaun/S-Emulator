<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="5" style="-fx-border-color: lightgray; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.dashboard.availablePrograms.AvailableProgramsListController">

    <Label fx:id="programListLabel" alignment="CENTER" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-background-color: #ddd; -fx-padding: 4; -fx-alignment: CENTER;" text="Available Programs" />

    <TableView fx:id="availableProgramTableView">
        <columns>
            <TableColumn fx:id="colProgramName" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Program Name" />
            <TableColumn fx:id="colUserUploaded" prefWidth="70.0" style="-fx-alignment: CENTER;" text="Uploader" />
            <TableColumn fx:id="colInstructionsAmount" prefWidth="81.0" style="-fx-alignment: CENTER;" text="Instructions" />
            <TableColumn fx:id="colMaxDegree" prefWidth="90.0" style="-fx-alignment: CENTER;" text="Max Degree" />
            <TableColumn fx:id="colTimesPlayed" prefWidth="90.0" style="-fx-alignment: CENTER;" text="Times Played" />
            <TableColumn fx:id="colAverageCreditsCost" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Avg Credits Usage" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <ToolBar>
        <Button fx:id="executeProgramsButton" alignment="CENTER" onAction="#onExecuteProgramButtonClicked" text="Execute Program" />
    </ToolBar>

</VBox>
