<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox spacing="5" style="-fx-border-color: lightgray; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.dashboard.users.UsersListController">
   <children>
       <Label fx:id="usersLabel" alignment="CENTER" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-background-color: #ddd; -fx-padding: 4; -fx-alignment: CENTER;" text="Available Users" />

       <TableView fx:id="usersTableView">
           <columns>
               <TableColumn fx:id="colUserName" prefWidth="70.0" style="-fx-alignment: CENTER;" text="User Name" />
               <TableColumn fx:id="colMainProgramsCount" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Main Programs" />
               <TableColumn fx:id="colSubFunctionsCount" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Sub Functions" />
               <TableColumn fx:id="colCurrentCredits" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Current Credits" />
               <TableColumn fx:id="colUsedCredits" prefWidth="90.0" style="-fx-alignment: CENTER;" text="Used Credits" />
               <TableColumn fx:id="colExecutionsCount" prefWidth="70.0" style="-fx-alignment: CENTER;" text="Executions" />
           </columns>
           <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
           </columnResizePolicy>
       </TableView>

      <ToolBar>
         <items>
            <Button onAction="#onUnselectUserClicked" text="Unselect User" />
         </items>
      </ToolBar>
   </children>
</VBox>
