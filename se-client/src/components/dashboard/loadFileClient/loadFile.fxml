<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="components.dashboard.loadFileClient.LoadFileController">

    <Button fx:id="loadFileButton" mnemonicParsing="false" onAction="#onLoadFileButtonAction" text="Load File"
            HBox.hgrow="NEVER">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <HBox.margin>
            <Insets right="5.0"/>
        </HBox.margin>
    </Button>

    <Label fx:id="pathLabel" alignment="CENTER" text="Select XML File" textAlignment="CENTER" textFill="#616161">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <padding>
            <Insets top="4.0"/>
        </padding>
    </Label>
</HBox>
