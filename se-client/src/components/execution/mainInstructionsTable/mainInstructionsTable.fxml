<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<TableView fx:id="instructionsTable" maxHeight="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="components.execution.mainInstructionsTable.MainInstructionsTableController">
    <columns>
        <TableColumn fx:id="colBreakPoint" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" style="-fx-alignment: CENTER;" text="BP" />
        <TableColumn fx:id="colIndex" prefWidth="50" style="-fx-alignment: CENTER;" text="#" />
        <TableColumn fx:id="colType" prefWidth="50" style="-fx-alignment: CENTER;" text="B\S" />
        <TableColumn fx:id="colLabel" prefWidth="60" style="-fx-alignment: CENTER;" text="Label" />
        <TableColumn fx:id="colInstruction" prefWidth="200" style="-fx-alignment: CENTER;" text="Instruction" />
        <TableColumn fx:id="colCycles" prefWidth="60" style="-fx-alignment: CENTER;" text="Cycles" />
        <TableColumn fx:id="colArchitecture" prefWidth="60" style="-fx-alignment: CENTER;" text="Architecture" />
    </columns>
    <placeholder>
        <Label text="No program loaded" />
    </placeholder>
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
</TableView>
