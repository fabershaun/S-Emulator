<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="components.execution.mainExecution.MainExecutionController">

    <SplitPane dividerPositions="0.7"
               AnchorPane.topAnchor="0.0"
               AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0">

        <SplitPane dividerPositions="0.65" orientation="VERTICAL">
            <VBox>
                <fx:include fx:id="topToolBar" source="../topToolBar/topToolBar.fxml" />
                <fx:include fx:id="mainInstructionsTable" source="../mainInstructionsTable/mainInstructionsTable.fxml" VBox.vgrow="ALWAYS"/>
                <fx:include fx:id="summaryLine" source="../summaryLineOfMainInstructionsTable/summaryLine.fxml" />
            </VBox>

            <VBox>
                <fx:include fx:id="chainInstructionTable" source="../chainInstructionsTable/ChainInstructionsTable.fxml" VBox.vgrow="ALWAYS"/>
            </VBox>
        </SplitPane>

        <VBox>
            <fx:include fx:id="debuggerExecutionMenu" source="../debuggerExecutionMenu/debuggerExecutionMenu.fxml" VBox.vgrow="ALWAYS"/>
        </VBox>
    </SplitPane>

</AnchorPane>
