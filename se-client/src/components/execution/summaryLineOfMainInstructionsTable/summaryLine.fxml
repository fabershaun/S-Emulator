<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox alignment="CENTER"
      spacing="12"
      style="-fx-background-color: #f5f5f5; -fx-border-color: #d0d0d0; -fx-border-width: 1 0 0 0;"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="components.execution.summaryLineOfMainInstructionsTable.SummaryLineController">

    <padding>
        <Insets top="8" bottom="8" left="10" right="10"/>
    </padding>

    <!-- === Group 1: Program Type Counts === -->
    <HBox spacing="5" alignment="CENTER">
        <Label text="Total:" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
        <Label fx:id="amountTotalLabel" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #222;"/>

        <Region prefWidth="20"/>
        <Label text="Basic:" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
        <Label fx:id="amountBasicLabel" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #222;"/>

        <Region prefWidth="20"/>
        <Label text="Synthetic:" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
        <Label fx:id="amountSyntheticLabel" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
    </HBox>

    <Label text="|" style="-fx-text-fill: #999; -fx-font-size: 13px; -fx-padding: 0 8 0 8;"/>

    <!-- === Group 2: Architecture Counts === -->
    <HBox spacing="5" alignment="CENTER">
        <Label text="I:" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
        <Label fx:id="a1Label" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #222;"/>

        <Region prefWidth="20"/>
        <Label text="II:" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
        <Label fx:id="a2Label" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #222;"/>

        <Region prefWidth="20"/>
        <Label text="III:" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
        <Label fx:id="a3Label" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #222;"/>

        <Region prefWidth="20"/>
        <Label text="IV:" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>
        <Label fx:id="a4Label" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
    </HBox>

</HBox>
