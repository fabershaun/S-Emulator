<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.loadFileClient.LoadFileController">
   <left>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="loadFileButton" mnemonicParsing="false" onAction="#onFileButtonAction" text="Load File" HBox.hgrow="NEVER">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="pathLabel" alignment="CENTER" text="Select XML File" textAlignment="CENTER" textFill="#616161">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets top="4.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </left>
   <right>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="chargeCreditsButton" mnemonicParsing="false" onAction="#onChargeCreditsButton" text="Charge Credits" />
            <TextField fx:id="chargeCreditsTextField" prefWidth="50.0" />
         </children>
      </HBox>
   </right>
</BorderPane>
